# Used for breaking into the code when running spec tests.
# Its a little better with output than RubyDebug
gem "pry"
gem "pry-byebug" if RUBY_VERSION.to_f > 2.0
gem "pry-debugger" if RUBY_VERSION.to_f < 2.0
gem 'better_errors' if RUBY_VERSION.to_f > 2.0
gem 'bullet' # detect N+1 queries
gem 'rack-mini-profiler'
gem 'interactive_editor'

# Auto build ctags
gem 'guard-ctags-bundler'
# Use `guard init ctags-bundler` to start it

# Only add this one in if needed
gem 'binding_of_caller'

# Rails Spring framework
# gem "spring"
# gem "spring-commands-rspec"
# gem 'show_me_the_cookies'

# Gem for inspecting methods and objects in IRB
gem 'looksee'

# Gem for doing per second benchmarking
gem 'benchmark-ips'

# Used to find dead routes in Rails
gem 'traceroute'

#Makes all the backtraces pretty
gem 'pretty_backtrace'
